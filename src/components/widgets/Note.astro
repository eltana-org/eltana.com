---
import { Icon } from 'astro-icon/components';
import note from '~/config/components/note';
---

{
  note && note.enabled && (
    <section class="bg-amber-50 dark:bg-slate-800 not-prose">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4 text-md text-center font-medium">
        {note.icon.enabled && <Icon name={note.icon.name} class="w-5 h-5 inline-block align-text-bottom" />}
        <Fragment set:html={note.text} />
      </div>
    </section>
  )
}
